{
  "manifest_version": 3,
  "name": "Haloscope - News Credibility Checker",
  "version": "1.0.0",
  "description": "Analyze news articles for credibility, bias, and factual claims",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Haloscope - Analyze Page"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}